      <property name="openjpa.jdbc.Schema" value="dbo"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=TranslationApp;integratedSecurity=true"/>
      <property name="javax.persistence.jdbc.user" value="CORP\klove"/>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
    </properties>
  </persistence-unit>
</persistence>
